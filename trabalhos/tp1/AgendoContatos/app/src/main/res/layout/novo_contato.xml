<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/novoContatoScrollView" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Cadastrar Contato"
                        android:id="@+id/novoContatoTitle"
                        android:gravity="center"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        android:textColor="@color/abc_input_method_navigation_guard" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Dados do contato"
                        android:id="@+id/novoContatoSubTitle"
                        android:gravity="left"
                        android:textSize="20dp"
                        android:textColor="@color/abc_input_method_navigation_guard"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="5dp">
                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/novoContatoNome"
                            android:hint="Nome"
                            android:paddingLeft="15dp"
                            android:textSize="15dp"
                            android:layout_gravity="top" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp">
                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/novoContatoEmail"
                            android:hint="Email"
                            android:paddingLeft="15dp"
                            android:inputType="textEmailAddress"
                            android:textSize="15dp"
                            android:layout_gravity="top" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="-5dp">
                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/novoContatoCelular"
                            android:hint="(27) 99988-7766"
                            android:paddingLeft="15dp"
                            android:inputType="phone"
                            android:textSize="15dp"
                            android:layout_gravity="top" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp">

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/novoContatoDataNasc"
                            android:hint="Data de nascimento"
                            android:paddingLeft="15dp"
                            android:textSize="15dp"
                            android:layout_gravity="top" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Gênero:"
                            android:id="@+id/novoContatoTxtGenero"
                            android:textColor="@color/abc_input_method_navigation_guard"
                            android:layout_marginTop="6dp"
                            android:textSize="17dp"
                            android:layout_marginRight="10dp" />

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/novoContatoGenero" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Endereço"
                                android:id="@+id/novoContatoEndereco"
                                android:gravity="left"
                                android:textSize="20dp"
                                android:textColor="@color/abc_input_method_navigation_guard"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="-10dp" />

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/novoContatoCep"
                                android:hint="CEP"
                                android:textSize="15dp"
                                android:paddingLeft="15dp"
                                android:inputType="number"
                                android:layout_gravity="top" />

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/novoContatoRua"
                                android:hint="Rua"
                                android:textSize="15dp"
                                android:paddingLeft="15dp"
                                android:layout_gravity="top" />

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/novoContatoNumero"
                                android:hint="Número"
                                android:layout_gravity="top|center_vertical"
                                android:paddingLeft="15dp"
                                android:textSize="15dp"
                                android:inputType="number"
                                android:gravity="center_vertical" />

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/novoContatoBairro"
                                android:hint="Bairro"
                                android:textSize="15dp"
                                android:paddingLeft="15dp"
                                android:layout_gravity="top" />

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/novoContatoCidade"
                                android:hint="Cidade"
                                android:textSize="15dp"
                                android:paddingLeft="15dp"
                                android:layout_gravity="top" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Relação Com Esse Contato"
                        android:id="@+id/novoContatoRelacao"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/abc_input_method_navigation_guard"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amigo"
                        android:id="@+id/novoContatoCkRelacaoAmigo"
                        android:checked="false"
                        android:layout_gravity="center_vertical"
                        android:textSize="15dp"
                        android:layout_marginBottom="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="17dp"
                        android:visibility="gone"
                        android:id="@+id/novoContatoLayoutReferenciaRelacaoAmigo">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Referência: "
                            android:id="@+id/novoContatoLayoutTxtReferenciaRelacaoAmigo"
                            android:textSize="15dp" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/novoContatoLayoutValueReferenciaRelacaoAmigo"
                            android:hint="Ex.: Amigo(a) da Faculdade, namorado(a) etc."
                            android:paddingLeft="15dp"
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Familiar"
                        android:id="@+id/novoContatoCkRelacaoFamiliar"
                        android:checked="false"
                        android:layout_gravity="center_vertical"
                        android:textSize="15dp"
                        android:layout_marginBottom="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="17dp"
                        android:visibility="gone"
                        android:id="@+id/novoContatoLayoutReferenciaRelacaoFamiliar">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Referência: "
                            android:id="@+id/novoContatoLayoutTxtReferenciaRelacaoFamiliar"
                            android:textSize="15dp" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/novoContatoLayoutValueReferenciaRelacaoFamiliar"
                            android:hint="Ex.: Mãe, pai, irmão(ã), etc."
                            android:paddingLeft="15dp"
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colega"
                        android:id="@+id/novoContatoCkRelacaoColega"
                        android:checked="false"
                        android:layout_gravity="center_vertical"
                        android:textSize="15dp"
                        android:layout_marginBottom="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="17dp"
                        android:visibility="gone"
                        android:id="@+id/novoContatoLayoutReferenciaRelacaoColega">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Referência: "
                            android:id="@+id/novoContatoTxtReferenciaRelacaoColega"
                            android:textSize="15dp" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/novoContatoLayoutValueReferenciaRelacaoColega"
                            android:hint="Ex.: Colega de Trabalho, Colega da Faculdade, etc."
                            android:paddingLeft="15dp"
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="17dp"
                        android:visibility="gone"
                        android:id="@+id/novoContatoLayoutLocalRelacaoColega">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Local de Trabalho: "
                            android:id="@+id/novoContatoTxtLocalRelacaoColega"
                            android:textSize="15dp" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/novoContatoLayoutValueLocalRelacaoColega"
                            android:paddingLeft="15dp"
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="17dp"
                        android:visibility="gone"
                        android:id="@+id/novoContatoLayoutProfissaoRelacaoColega">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profissão: "
                            android:id="@+id/novoContatoLayoutTxtProfissaoRelacaoColega"
                            android:textSize="15dp" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/novoContatoLayoutValueProfissaoRelacaoColega"
                            android:paddingLeft="15dp"
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nível de proximidade: "
                            android:id="@+id/novoContatoTxtNivelProximidade"
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical" />

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/novoContatoNivelProximidade" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom" >

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Salvar"
                        android:id="@+id/novoContatoSalvar"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#00aa0b"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Cancelar"
                        android:id="@+id/novoContatoCancelar"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#ed2929"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>